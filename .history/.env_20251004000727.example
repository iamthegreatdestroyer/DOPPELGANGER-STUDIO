# DOPPELGANGER STUDIO - Environment Configuration
# Copy this file to .env and fill in your actual values

# =======================
# AI/ML API Keys
# =======================
# Claude Sonnet 4.5 (Primary LLM) - Get from: console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI GPT-4 (Fallback LLM) - Get from: platform.openai.com
OPENAI_API_KEY=your_openai_api_key_here

# =======================
# Research APIs
# =======================
# The Movie Database - Get from: themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here

# =======================
# Database Configuration
# =======================
# PostgreSQL
POSTGRES_URL=postgresql://doppelganger_user:your_password@localhost:5432/doppelganger

# MongoDB
MONGODB_URL=mongodb://localhost:27017/doppelganger

# Redis
REDIS_URL=redis://localhost:6379/0

# =======================
# Application Settings
# =======================
# Environment (development, staging, production)
ENVIRONMENT=development

# Logging Level
LOG_LEVEL=INFO

# Debug Mode
DEBUG=true

# =======================
# Asset Acquisition
# =======================
# Pexels API - Get from: pexels.com/api
PEXELS_API_KEY=your_pexels_api_key_here

# Pixabay API - Get from: pixabay.com/api/docs
PIXABAY_API_KEY=your_pixabay_api_key_here

# =======================
# Voice Synthesis (Optional)
# =======================
# ElevenLabs - Get from: elevenlabs.io
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Azure Speech
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_region_here

# =======================
# Image Generation (Optional)
# =======================
# Stable Diffusion API
STABILITY_API_KEY=your_stability_api_key_here

# =======================
# Storage Configuration
# =======================
# Local asset storage path
ASSET_STORAGE_PATH=./data/assets

# Maximum asset cache size (GB)
MAX_CACHE_SIZE_GB=100

# =======================
# Performance Settings
# =======================
# AI Response cache TTL (seconds) - Default: 7 days
AI_CACHE_TTL=604800

# Max concurrent scraping operations
MAX_CONCURRENT_SCRAPES=5

# Request timeout (seconds)
REQUEST_TIMEOUT=30

# =======================
# Security
# =======================
# Secret key for encryption (generate with: openssl rand -hex 32)
SECRET_KEY=your_secret_key_here

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
